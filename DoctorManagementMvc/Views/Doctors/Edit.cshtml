@model DoctorManagementMvc.Models.Doctor
@{
    ViewData["Title"] = "Edit Doctor";
}
<h2>Edit Doctor</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Code" />
    <div class="mb-3">
        <label class="form-label">Code</label><br />
        <strong>@Model.Code</strong>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Specialization" class="form-label"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Availability" class="form-label"></label>
        <input asp-for="Availability" class="form-control" type="number" min="0" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save changes</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
